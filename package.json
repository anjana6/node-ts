        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc",
        "start": "npm run build && node dist/index.js",
        "dev": "nodemon --watch src --exec ts-node src/index.ts",
        "lint": "eslint .",
        "lint-fix": "npm run lint -- --fix",
